{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Person",

  "definitions": {
    "Person": {
      "title": "Person",
      "description": "Person",

      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "eyeColor": {
          "type": ["string", "null"],
          "enum": ["RED", "BLUE", "YELLOW", "ORANGE", null]
        },
        "hairColor": {
          "type": "string",
          "enum": ["RED", "BLUE", "YELLOW", "ORANGE"]
        },
        "birthday": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "height": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "weight": {
          "type": ["integer", "null"],
          "minimum": 1
        },
        "passportId": {
          "type": "string",
          "minLength": 1,
          "maxLength": 23
        },
        "location": {
          "$ref": "classpath:///schemas/locations.json#/definitions/Location"
        },
        "locationId": {
          "type": "integer",
          "minimum": 1
        }
      },
      
      "dependencies": {
        "location": { "not": { "required": ["locationId"] } },
        "locationId": { "not": { "required": ["location"] } }
      },

      "required": ["name", "hairColor", "height", "passportId"]
    }
  }
}