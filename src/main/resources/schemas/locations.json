{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Location",

  "definitions": {
    "Location": {
      "title": "Location",
      "description": "Location DTO",

      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x": {
          "type": "integer",
          "minimum": -2000000000,
          "maximum": 2000000000
        },
        "y": {
          "type": ["integer", "null"],
          "minimum": -2000000000,
          "maximum": 2000000000
        },
        "z": {
          "type": "number",
          "minimum": -2000000000,
          "maximum": 2000000000
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 240
        }
      },
      "required": ["x", "z", "name"]
    }
  }
}
