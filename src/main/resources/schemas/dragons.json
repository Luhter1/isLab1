{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Dragon",

  "definitions": {
    "Dragon": {
      "title": "Dragon",
      "description": "Dragon DTO",

      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "type": {
          "type": ["string", "null"],
          "enum": ["WATER", "UNDERGROUND", "AIR", "FIRE"]
        },
        "character": {
          "type": "string",
          "enum": ["EVIL", "CHAOTIC_EVIL", "FICKLE"]
        },
        "age": {
          "type": ["integer", "null"],
          "minimum": 1,
          "maximum": 2000000000
        },
        "color": {
          "type": ["string", "null"],
          "enum": ["RED", "BLUE", "YELLOW", "ORANGE", null]
        },
        "coordinates": {
          "$ref": "classpath:///schemas/coordinates.json#/definitions/Coordinate"
        },
        "coordinatesId": {
          "type": "integer",
          "minimum": 1,
          "maximum": 2000000000
        },
        "cave": {
          "$ref": "classpath:///schemas/dragon-caves.json#/definitions/DragonCave"
        },
        "caveId": {
          "type": "integer",
          "minimum": 1,
          "maximum": 2000000000
        },
        "killer": {
          "$ref": "classpath:///schemas/people.json#/definitions/Person"
        },
        "killerId": {
          "type": "integer",
          "minimum": 1,
          "maximum": 2000000000
        },
        "head": {
          "$ref": "classpath:///schemas/dragon-heads.json#/definitions/DragonHead"
        },
        "headId": {
          "type": "integer",
          "minimum": 1,
          "maximum": 2000000000
        }
      },
      "dependencies": {
        "cave": { "not": { "required": ["caveId"] } },
        "caveId": { "not": { "required": ["cave"] } },
        
        "killer": { "not": { "required": ["killerId"] } },
        "killerId": { "not": { "required": ["killer"] } },
        
        "head": { "not": { "required": ["headId"] } },
        "headId": { "not": { "required": ["head"] } },

        "coordinates": { "not": { "required": ["coordinatesId"] } },
        "coordinatesId": { "not": { "required": ["coordinates"] } }
      },
      "required": ["name", "character"],
      "oneOf": [
        { "required": ["coordinates"] },
        { "required": ["coordinatesId"] }
      ]
    }
  }
}
